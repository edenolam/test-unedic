{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
    <h1>Etudiant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ student.FirstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ student.LastName }}</td>
            </tr>
            <tr>
                <th>Numero etudiant</th>
                <td>{{ student.NumEtud }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex">

    <a href="{{ path('student_index') }}" class="btn btn-outline">retour a la liste</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}" class="btn btn-outline">Modifier</a>

    {{ include('student/_delete_form.html.twig') }}
</div>
{% endblock %}
